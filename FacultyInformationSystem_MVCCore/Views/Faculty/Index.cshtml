                        <td>
                            @Html.DisplayFor(modelItem => item.DesignationId)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>*@
                <td>
                    <button type="button" class="btn btn-outline-dark">
                        @Html.ActionLink("Edit", "Edit", new { id = item.FacultyId })
                        <style>
                            a:hover {
                                color: #FFFFFF;
                            }
                        </style>
                    </button>
