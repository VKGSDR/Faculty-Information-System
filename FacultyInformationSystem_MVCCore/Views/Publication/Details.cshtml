@model FacultyInformationSystem_MVCCore.Publication
@{ ViewData["Title"] = "Details"; }
<div class="p-3 mb-2 bg-dark text-white"><h2>Details</h2></div>
<div>
    <hr />
    <p>
        <a class="btn btn-secondary " data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Show Less </a>
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">More</button>
        @*<button class="btn btn-primary" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">More</button>*@
    </p>
    <div class="row">
        <div class="col">
            <div class="collapse multi-collapse" id="multiCollapseExample1">
                <div class="card card-body">
                    <p class="font-weight-bold">Title:</p>
                    <p>&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(model => model.PublicationTitle)</p>
                    <p class="font-weight-bold">Article:</p>
                    <p>&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(model => model.ArticleName)</p>
                    <p class="font-weight-bold">Publisher: </p>
                    <p>&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(model => model.PublisherName)</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="collapse multi-collapse" id="multiCollapseExample2">
                <div class="card card-body">
                    <p class="font-weight-bold">Publication ID:</p>
                    <p>&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(model => model.PublicationId)</p>
                    <p class="font-weight-bold">Citation Date:</p>
                    <p>&nbsp;&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.CitationDate)</p>
                    <p class="font-weight-bold">Publication Location:</p>
                    <p>&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(model => model.PublicationLocation)</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PublicationId }) |
    <a asp-action="AdminProfile">Back to List</a>
</div>