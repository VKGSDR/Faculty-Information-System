@model IEnumerable<FacultyInformationSystem_MVCCore.Publication>

@{
    ViewData["Title"] = "Index";
}
<script src="~/js/Custom.js"></script>
<h1>Index</h1>

<p>
    <button type="button" class="btn btn-outline-success"> <a asp-action="Create">Create New</a></button>

</p>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success!&nbsp;</strong>@TempData["AlertMessage"]
    </div>}
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.PublicationId)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.FacultyId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.PublicationTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherName)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.PublicationLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CitationDate)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.PublicationId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FacultyId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.PublicationTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.PublicationLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CitationDate)
                    </td>*@
                <td>
                    <button type="button" class="btn btn-outline-dark">
                        @Html.ActionLink("Edit", "Edit", new { id = item.PublicationId })
                        <style>
                            a:hover {
                                color: #FFFFFF;
                            }
                        </style>
                    </button>
                    <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Details", "Details", new { id = item.PublicationId }) </button>
                    <button type="button" class="btn btn-outline-danger">
                        @Html.ActionLink("Delete", "Delete", new { id = item.PublicationId }, new { onclick = "return confirm('Are you sure you wish to delete this record?');" })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="button" class="btn btn-outline-danger">
    @Html.ActionLink("Back", "AdminProfile", "Auth")
</button>
